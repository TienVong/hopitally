<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context="com.ducthanh.reviewhospital.SignupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Đăng ký"
            android:textColor="#3ab9d9"
            android:textSize="40sp">

        </TextView>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/signup_email"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Email:"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/signup_UID"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Nhập ID:"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/signup_MK"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:inputType="textPassword"
                android:layout_marginRight="20dp"
                android:hint="Nhập mật khẩu:"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/signup_hoTen"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Họ và tên"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:text="Giới tính:"
            android:textSize="19sp"></TextView>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:id="@+id/sigup_radioGT"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="150dp"
                android:id="@+id/signup_nam"
                android:layout_height="wrap_content"
                android:text="Nam"></RadioButton>

            <RadioButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/signup_nu"
                android:text="Nữ"></RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/txtNgaySinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Ngày sinh:"
            android:textSize="19sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sigup_pinner_ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/ngay_sinh"></Spinner>


            <Spinner
                android:id="@+id/sigup_pinner_thang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/thang_sinh"></Spinner>


            <Spinner
                android:id="@+id/sigup_pinner_nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/nam_sinh"></Spinner>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/signup_btnSignup"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#00695C"
            android:text="Đăng ký"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/signup_btnCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#01579B"
            android:text="Hủy"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>
