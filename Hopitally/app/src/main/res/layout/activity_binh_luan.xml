<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/dg_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentTop="true"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bl_khongBL"
        android:text="Không có bình luận nào"
        android:textSize="20sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp">
        </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/binhLuan_btnBL"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#0a1b1a1b"
        android:text="Đánh giá về bệnh viện"></Button>


</RelativeLayout>